// Este é o provider do nosso banco de dados
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Lê a URL de conexão do arquivo .env
}

// Este é o gerador do cliente Prisma para o nosso código
generator client {
  provider = "prisma-client-js"
}

// Modelo de dados para o Usuário (Encarregado)
model Usuario {
  id              Int    @id @default(autoincrement())
  nome            String
  numero_registro String @unique
  email           String @unique
  senha           String
}

// Modelo de dados para o Montador
model Montador {
  id              Int      @id @default(autoincrement())
  nome            String
  numero_registro String   @unique
  projetos        Projeto[] // Relação: um montador pode ter vários projetos
}

// Modelo de dados para o Projeto
model Projeto {
  id              Int       @id @default(autoincrement())
  codigo_projeto  String
  nome_empresa    String
  status          String    // Ex: "Pendente", "Em Montagem", "Concluído"
  descricao       String?   // '?' significa que este campo é opcional
  data_cadastro   DateTime  @default(now()) // Pega a data/hora atual por padrão
  data_entrega    DateTime?

  // Campo que cria a relação com o Montador
  montadorId      Int
  // Definindo a relação formalmente
  montador        Montador  @relation(fields: [montadorId], references: [id])
}